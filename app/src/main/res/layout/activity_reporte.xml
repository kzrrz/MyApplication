<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reporte"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lsc.perrerampal.ReporteActivity">

    <TextView
        android:id="@+id/selecReporteTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/SelecReportTxt"
        android:textAlignment="center"
        android:textColor="@color/colorBlanco"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/reportSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/selecReporteTV"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/lugarRepEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/lugRepHint"
        android:inputType="textPersonName"
        android:shadowColor="@color/colorBlanco"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium.Inverse"
        android:textColor="@color/colorBlanco"
        android:textColorHint="@color/colorBlanco"
        android:layout_above="@+id/descripcionRepEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp" />

    <EditText
        android:id="@+id/descripcionRepEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/repDescHint"
        android:inputType="textPersonName"
        android:shadowColor="@color/colorBlanco"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium.Inverse"
        android:textColor="@color/colorBlanco"
        android:textColorHint="@color/colorBlanco"
        android:layout_marginBottom="36dp"
        android:layout_above="@+id/nombreRepEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/nombreRepEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/nombreRepHint"
        android:inputType="textPersonName"
        android:shadowColor="@color/colorBlanco"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium.Inverse"
        android:textColor="@color/colorBlanco"
        android:textColorHint="@color/colorBlanco"
        android:layout_marginBottom="39dp"
        android:layout_above="@+id/telContactoEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/telContactoEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/telContactHint"
        android:inputType="phone"
        android:shadowColor="@color/colorBlanco"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium.Inverse"
        android:textColor="@color/colorBlanco"
        android:textColorHint="@color/colorBlanco"
        android:layout_above="@+id/envioReporteBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="33dp" />

    <Button
        android:id="@+id/ubicacionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="@string/ubicActual"
        android:layout_alignBottom="@+id/lugarRepEditText"
        android:layout_toRightOf="@+id/lugarRepEditText"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/envioReporteBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/sendRep"
        android:layout_above="@+id/borrarBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/borrarBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/borrarStr"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
