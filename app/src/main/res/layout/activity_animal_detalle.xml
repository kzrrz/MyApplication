<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lsc.perrerampal.Animal_detalle"    android:orientation="vertical"
    android:background="#121212"
    android:weightSum="1">


    <ImageView
        android:id="@+id/id_imagen_detalle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        />


    <TextView
        android:id="@+id/id_nombre_detalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nombre: taller equis"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="27dp"
        android:textColor="#AFAFFF"
        android:layout_below="@+id/id_imagen_detalle"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/id_descripcion_detalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="descripcion : peeero puuuque"
        android:textColor="#AFAFFF"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="18dp"
        android:layout_below="@+id/id_nombre_detalle"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/accionBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_descripcion_detalle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="@string/adopStr" />

</RelativeLayout>
