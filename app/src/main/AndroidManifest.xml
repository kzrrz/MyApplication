<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lsc.perrerampal">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_color"
        android:label="@string/encabezadoMenuPpal"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MenuPrincipal" />
        <activity android:name=".ListaAdopcion" />
        <activity android:name=".ReporteActivity" />
        <activity android:name=".TalleresCursosActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Taller_detalle" />
        <activity android:name=".Animal_detalle" />

        <service android:name=".notificacionFirebase">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".About"></activity>

        <uses-permission android:name="android.permission.INTERNET" />
        <uses-permission android:name="android.permission.CALL_PHONE" />
        <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    </application>

</manifest>